{
    "manifest_version": 3,
    "name": "QuickLike for YouTube",
    "version": "1.0.0",
    "description": "Adds convenient like/dislike buttons to YouTube's video player controls for quick interactions without leaving fullscreen.",
    "author": "Sarthak",
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "action": {
        "default_icon": {
            "48": "icons/icon-48.png"
        }
    },
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "css": ["styles.css"],
            "js": ["content.js"]
        }
    ],
    "homepage_url": "https://github.com/sarthakkhandelwal7/QuickLike-for-YouTube"
}
